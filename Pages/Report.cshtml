@page
@model ReportModel
@{
    ViewData["Title"] = "Reports";
}

<div class="text-center">
    <h1 class="display-4">Reports</h1>
 
</div>


<br />


  <div class="row">
        <div class="col-5 border border-success">
            <form method="post">
            <div class="form-group">
                <label asp-for="SReportID" class="control-label"></label>
                <select asp-for="SReportID" asp-items="Model.ReportsDropDown" class="form-control">
                    <option value="">---Select a Report---</option> 
                </select>
                <span asp-validation-for="SReportID" class="text-danger"></span>
            </div>
            <p> </p>
             <div class="form-group">
                <input type="submit" value="Submit" class="btn btn-danger" />
                </div>
                </form>
                </div>

        <div class="col-7 border border-success">
            </div>
</div>
     <div class="row">
        <div class="col-5 border border-danger">
           You have selected: Report#@Model.SReport?.ReportID
            Paragraph: @Model.SReport?.ReportParagraph
                </div>
        <div class="col-7 border border-warning">
      
                </div>
    </div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}