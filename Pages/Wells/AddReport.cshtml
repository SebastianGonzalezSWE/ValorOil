@page
@model ValorOil.Pages.Wells.AddReportModel

@{
    ViewData["Title"] = "Add a report";
}

<h1>Add a report!</h1>
<h4>Report</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div class="form-group">
                <label asp-for="Report.WellID" class="control-label"></label>
                <select asp-for="Report.WellID" asp-items="Model.WellDropDown" class="form-control">
                    <option value="">--Select Well--</option> 
                </select>
                <span asp-validation-for="Report.WellID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Report.ReportParagraph" class="control-label"></label>
                <input asp-for="Report.ReportParagraph" class="form-control" />
                <span asp-validation-for="Report.ReportParagraph" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Add Report" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Back to Index</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}